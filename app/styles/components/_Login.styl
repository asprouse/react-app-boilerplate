#login
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

  form
    margin: 1rem 0

    input

    .button-wrapper
      position: relative
      display: inline-block
      width: 18%

      @media mqPhone
        width: 100%

      button
        width: 100%
        margin: 0
        padding: 1rem 1.5rem
        border-radius: 0
        color: #fff

        @media mqPhone
          font-size: .8rem
          padding: .5rem 1rem
